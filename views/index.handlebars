<header id="title">
    <h1>Burgers</h1>
</header>
<div id="main">
    <div id="hungry">
        <h2>Ready to Eat</h2>

        <ul id="readyBurgers">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div id="notHungry">
        <div id="notHungryTitle">
            <h2>Already Ate</h2>
        </div>
        <div id="listEatenBurger">
            <ul id="eatenBurgers">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>


<h2>Add Burgers</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devoured">Has it been eaten?</label><br>
        <input type="radio" class="burgerStatus" name="devoured" value="1" checked> yes<br>
        <input type="radio" class="burgerStatus" name="devoured" value="0"> nope
    </div>

    <button type="submit">Add Burger</button>
</form>